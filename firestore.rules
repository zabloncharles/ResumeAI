rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read resumes collection
    match /resumes/{resumeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Allow authenticated users to read analytics
    match /analytics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through admin SDK
    }
    
    // Allow authenticated users to read paths collection
    match /paths/{pathId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Study sets rules - strict user-based access control
    match /studySets/{setId} {
      // Users can only read their own sets or public sets
      allow read: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || resource.data.isPublic == true);
      
      // Users can only create/update their own sets
      allow create: if request.auth != null && 
        request.resource.data.createdBy == request.auth.uid;
      
      allow update: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
      
      // Users can only delete their own sets
      allow delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
      
      // Flashcards subcollection - inherit parent permissions
      match /flashcards/{cardId} {
        allow read, write: if request.auth != null && 
          get(/databases/$(database)/documents/studySets/$(setId)).data.createdBy == request.auth.uid;
      }
    }
    
    // Public sets rules
    match /publicSets/{publicCode} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
